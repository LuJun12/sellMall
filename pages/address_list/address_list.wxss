/* pages/address_list/address_list.wxss */
@import "../wait_pay/wait_pay.wxss";

.radio {
  display: flex;
  flex-direction: column;
  font-size: 29rpx;
  width: 100%;
  background: white;
  padding: 15rpx 0;
  position: relative;
}

.address_info {
  margin-left: 69rpx !important;
}

.edit {
  position: absolute;
  top: 50%;
  transform: translate(-50%, 0);
  width: 50rpx;
  height: 55rpx;
  right: 0;
}

.new_address {
  width: 100%;
  height: 90rpx;
  background: red;
  line-height: 90rpx;
  text-align: center;
  color: white;
  display: block;
  position: absolute;
  bottom: 0;
  font-size: 32rpx;
}
