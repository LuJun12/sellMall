/* pages/good_detail/good_detail.wxss */

page {
  background: #ccc;
}

.photo_list {
  height: 750rpx;
}

.photo {
  width: 100%;
  height: 750rpx;
}

.on {
  border: 1px solid red !important;
}

.goods {
  width: 100%;
  height: 150rpx;
  font-size: 26rpx;
  background: white;
  margin-top: 5rpx;
  position: relative;
}

.goods_name {
  font-size: 30rpx;
  position: absolute;
  top: 30rpx;
  left: 20rpx;
}

.good_text {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}

.price {
  color: red;
  font-weight: 600;
}

.has_buy {
  margin-left: 50rpx;
  color: #ccc;
}

.good_rate {
  margin-left: 50rpx;
  color: #ccc;
}

.share {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.share image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}

.share text {
  font-size: 20rpx;
}

.select_size {
  width: 100%;
  height: 90rpx;
  background: white;
  margin-top: 15rpx;
  font-size: 26rpx;
  line-height: 90rpx;
  display: flex;
  position: relative;
}

.select_size image {
  display: block;
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.select_text {
  margin-left: 20rpx;
}

.size {
  margin-left: 35rpx;
}

.show_pic {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  background: white;
}

.title {
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.pic_name {
  font-size: 25rpx;
  color: #ccc;
  margin-top: 40rpx;
  margin-left: 10rpx;
}

.pic {
  width: 100%;
  margin-top: 15rpx;
}

.pic image {
  width: 100%;
}

.comment {
  width: 100%;
  margin-top: 15rpx;
  background: white;
  padding-bottom: 100rpx;
}

.comment_header {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
}

.comment_text {
  margin-left: 26rpx;
}

.rate_num {
  color: red;
  margin-left: 10rpx;
}

.comment_list {
  width: 100%;
}

.comment_item {
  width: 100%;
  display: flex;
}

.avatar {
  display: flex;
  flex-direction: column;
}

.avatar image {
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.avatar text {
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 25rpx;
}

.comment_content {
  font-size: 24rpx;
  width: 100%;
  padding-top: 23rpx;
}

.content {
  margin-left: 30rpx;
}

.good_info {
  margin-left: 30rpx;
  margin-top: 26rpx;
  width: 100%;
  border-bottom: 1px solid #ccc;
  padding-bottom: 10rpx;
}

.block {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  min-height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.select_goods {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
  z-index: 999999;
}

.select_content {
  padding-left: 8%;
  width: 92%;
  display: flex;
  flex-direction: column;
}

.select_header {
  width: 100%;
  height: 150rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
  position: relative;
}

.select_goods_img {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-top: 15rpx;
}

.close {
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.select_goods_info {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 34rpx;
}

.select_goods_price {
  margin-top: 10rpx;
  color: red;
}

.size_text {
  font-size: 26rpx;
  margin-top: 20rpx;
}

.size_list {
}

.size_content {
  width: 100%;
}

.size_item {
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-left: 10rpx;
  width: 130rpx;
  height: 50rpx;
  line-height: 40rpx;
  text-align: center;
  float: left;
  margin-top: 15rpx;
}

.size_item text {
  font-size: 25rpx;
}

.sell_num_content {
  width: 100%;
  height: 120rpx;
  font-size: 29rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.sell_text {
  margin-top: 30rpx;
}

.add_num {
  margin-top: 30rpx;
  position: absolute;
  right: 20rpx;
  display: flex;
}

.add_num view {
  width: 60rpx;
  height: 50rpx;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 50rpx;
}

.add_cart {
  width: 100%;
  height: 90rpx;
  background: red;
  color: white;
  line-height: 90rpx;
  text-align: center;
  display: block;
  font-size: 38rpx;
}

.footer {
  width: 100%;
  height: 95rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  border-top: 2px solid #ccc;
  z-index: 66666;
  background: white;
}

.kefu {
  width: 15%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  position: relative;
}

.kefu image {
  display: block;
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 15rpx;
}

.go_cart {
  font-size: 19rpx;
  position: absolute;
  top: 50rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.footer_list {
  width: 35%;
  font-size: 35rpx;
  color: white;
  background: #ff6850;
  line-height: 90rpx;
  text-align: center;
}

.footer_list1 {
  background: #e64340;
}

.cart_num {
  font-size: 20rpx;
  width: 30rpx;
  height: 30rpx;
  background: red;
  border-radius: 50%;
  color: white;
  position: absolute;
  right: 22rpx;
}
