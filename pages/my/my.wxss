page {
  background: #f2f2f2;
}

.personal {
  height: 100%;
  padding: 0 15rpx;
}

.my_info {
  width: 100%;
  height: 250rpx;
  position: relative;
  background: white;
  margin-top: 10rpx;
  border-radius: 10rpx;
}

.avatar {
  display: block;
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  left: 60rpx;
}

.name {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  left: 240rpx;
  font-size: 32rpx;
}

.content {
  width: 100%;
  background: white;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.list_item {
  width: 100%;
  height: 90rpx;
  position: relative;
  line-height: 90rpx;
  border-bottom: 1px solid #ccc;
}

.text {
  position: absolute;
  font-size: 32rpx;
  left: 20rpx;
}

.right {
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.m_num {
  font-size: 32rpx;
  display: inline-block;
  margin-left: 186rpx;
  background: red;
  color: white;
  border-radius: 10rpx;
  padding: 0 20rpx;
}
.n_num{
  background: green;
  margin-left: 50rpx
}
