/* pages/shouye/shouye.wxss */

page {
  background: #ccc;
}
/* 搜索 */
.search-view{
  position:fixed;
  left:0;
  right:0;
  top:0;
  z-index:500;
  width: 100%;
  height: 100rpx;
  background: gray;
  display: flex;
  flex-direction: column;
}
.search-content{
   background: white;
   width:650rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border-radius:5px 5px;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-input{
  width: 500rpx;
  font-size: 28rpx;
}
.search-btn{
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color:blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position: relative;
}
/* 轮播图 */
swiper {
  width: 100%;
  height: 400rpx;
}

swiper image {
  width: 100%;
  height: 400rpx;
}
/* 导航条 */
.nav {
  height: 80rpx;
  background: white;
  margin-top: 3rpx;
  width: 100%
}
.on{
  border-bottom: 2px solid red
}
.scroll {
  height: 80rpx;
  width: 100%;
 white-space: nowrap;
 display: flex
}
.nav_list{
  height: 80rpx;
  display: inline-flex;
}
.nav_item {
  width: 160rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  text-align: center;
  display: inline-lock
}
/* 公告 */
.notice{
  width: 100%;
  height: 80rpx;
  background: white;
  margin: 10rpx 0;
  font-size: 25rpx;
  line-height: 80rpx;
}
.notice_text{
  color: #ccc;
  margin-left: 25rpx
}
.notice_content{
 margin-left: 20rpx;
 color: red
}
/* 优惠卡 */
.cards{
  width: 100%;
  background: white;
  height: 180rpx;
}
.card_scroll{
  height: 180rpx;
  width: 100%
}
.card_list{
  display: inline-flex;
  height: 150rpx;
  margin: 15rpx 15rpx
}
.card_item:first-child{
  margin-left: 0
}

.card_item{
  width: 260rpx;
  background: #F0A83A;
  color: white;
  font-size: 23rpx;
  display: flex;
  flex-direction: column;
  margin-left:24rpx;
  border-radius: 6rpx
}
.card_price{
  font-size: 30rpx;
  margin-left: 12rpx;
  margin-top: 6rpx
}
.card_text{
  margin-left: 10rpx;
  margin-top: 5rpx
}
/* 商品 */
.goods{
  width: 100%;
  padding-bottom: 25rpx
}
.goods_list{
  padding: 0 25rpx;
  display: flex;
  flex-wrap: wrap
  }
.goods_item{
  background: white;
  width: 338rpx;
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
  padding-bottom: 20rpx;
  border-radius:15rpx;
}
.goods_item:nth-child(2n){
  margin-left: 25rpx
}
.goods_item image{
  display: block;
  width:338rpx;
  height: 338rpx;
  border-radius:15rpx; 
}
.goods_name{
  font-size: 30rpx;
  margin-left: 25rpx;


}
.goods_price{
  display: flex;
  font-size: 30rpx;
  flex-direction: row;
  margin-top: 15rpx
}
.now_price{
  color: red;
  margin-left: 25rpx;

}
.old_price{
  color: #ccc;
  margin-left: 50rpx;
  position: relative
}
.old_price::after{
  width: 50rpx;
  height: 5px;
  color: red;
  position: absolute;
  left: 0;
  top: 0
}
