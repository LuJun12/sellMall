page{
  width: 100%;
  height: 100%;
  background: #F5F5F9
}
.address_container{
  padding: 25rpx
}
.input_item{
  display: flex;
  background: white;
  border-bottom: 1px solid #F5F5F9
}
label{
  font-size:30rpx;
width:20%;
line-height:80rpx;
text-align:center;

}
input{
width:78%;
height:60rpx;
line-height:60rpx;
padding:10rpx 0;
font-size:25rpx;
padding-left:2%;

}
.placeholder{
  font-size: 25rpx
}
.btn{
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: white;
  font-size: 35rpx;
  display: block;
  margin: 0 auto;
}
.save_address{
  background: #E64340;
  margin-top: 150rpx
}
.cancel{
  background: white;
  color: black;
  margin-top: 35rpx;
  border-radius: 5px
}
.picker{
  line-height:80rpx;
}
.picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
    font-size: 25rpx
}
.hui{
    color: #777;
}